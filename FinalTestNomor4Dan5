#Algoritma Bubble Sorting, Selection Sorting, dan Insertion Sorting
# 1. BUBBLE SORT
def bubble_sort(arr):
    n = len(arr)
    for i in range(n):
        # Perulangan membandingkan elemen bersebelahan
        for j in range(0, n - i - 1):
            if arr[j] > arr[j + 1]:
                # Tukar jika salah urut
                arr[j], arr[j + 1] = arr[j + 1], arr[j]


# 2. SELECTION SORT

def selection_sort(arr):
    n = len(arr)
    for i in range(n):
        min_index = i
        # Cari nilai terkecil dari bagian yang belum terurut
        for j in range(i + 1, n):
            if arr[j] < arr[min_index]:
                min_index = j
        # Tukar elemen awal dengan elemen terkecil
        arr[i], arr[min_index] = arr[min_index], arr[i]



# 3. INSERTION SORT

def insertion_sort(arr):
    for i in range(1, len(arr)):
        key = arr[i]
        j = i - 1
        # Geser elemen lebih besar ke kanan
        while j >= 0 and arr[j] > key:
            arr[j + 1] = arr[j]
            j -= 1
        # Tempatkan key di posisi yang benar
        arr[j + 1] = key


# DATA NEGARA (contoh)
data_negara = [
    "Indonesia", "Malaysia", "Thailand", "Vietnam",
    "Brunei", "Singapura", "Kamboja", "Laos"
]

print("Data awal:", data_negara)


# Penerapan masing-masing algoritma

data1 = data_negara.copy()
bubble_sort(data1)
print("\nHasil Bubble Sort   :", data1)

data2 = data_negara.copy()
selection_sort(data2)
print("Hasil Selection Sort:", data2)

data3 = data_negara.copy()
insertion_sort(data3)
print("Hasil Insertion Sort:", data3)
